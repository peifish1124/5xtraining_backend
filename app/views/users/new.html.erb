<h1><%=t('page.new_user_page')%></h1>
<br>
<%= form_for @user, url: sign_up_path, method: 'post' do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :email %>
  <%= f.text_field :email %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br><br>
  <%= f.submit t('action.signup') %>
<% end %>
<br>
<%= link_to t("back_to_login"), login_path %>