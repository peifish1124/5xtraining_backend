<%= simple_form_for(task) do |f| %>
  
  <%= f.input :title, label: "標題" %>

  <%= f.input :content, label: "內容" %>

  <%=f.input :start_time, as: :datetime, html5: true, label: "開始時間"%>

  <%=f.input :end_time, as: :datetime, html5: true, label: "結束時間"%>
  
  <%= f.input :status, collection: ["待處理", "進行中", "已完成"], label: "狀態" %>

  <%= f.input :priority, collection: ["低", "中", "高"], label: "優先順序" %>

  <%= f.input :tag, label: "分類標籤" %>

  <%= f.input :user_id, label: "使用者序號" %>

  <%= f.submit %>
<% end %>