<%= bootstrap_form_for(task, data: { turbo: false }) do |f| %>
  
  <%= f.text_field :title %><br/>

  <%= f.text_field :content %><br/>

  <%=f.datetime_select :start_time, :locale => 'en'%><br/>

  <%=f.datetime_select :end_time, :locale => 'en'%><br/>
  
  <%= f.select :status, t(:status).values %><br/>

  <%= f.select :priority, Task.priorities.map {|key, value| [t("priority.#{key}"),key] } %><br/>

  <%= f.text_field :tag %><br/>

  <%= f.text_field :user_id %><br/>

  <%= f.submit t("button.submit")%>
<% end %>