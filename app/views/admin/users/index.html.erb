<h1> <%= t("page.user_index_page")%></h1>

<br>
<table class = "table" id = "task_table" >
    <tr>
      <th><%= @users.human_attribute_name(:name) %></th>
      <th><%= @users.human_attribute_name(:email)%></th>
      <th><%= t('tasks_num')%></th>
      <th><%= t("action.title") %></th>
    </tr>

  <% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, admin_user_path(user) %></td>
    <td><%= user.email %></td>
    <td><%= user.tasks.count %></td>
    <td>
        <%= link_to t("action.edit") , edit_admin_user_path(user) %>
        <%= link_to t("action.delete"), admin_user_path(user), method: "delete", data: { turbo_confirm: t("notice.confirm"), turbo_method: "delete" } %>
    </td>
  </tr>
  <% end %>
</table>
 
<br>
<%= link_to t('action.new_user'), new_admin_user_path %>